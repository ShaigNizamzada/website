<div class="card mb-3">
  <div class="row">
    <div class="col-4">
      <img src="/images/<%= imageURL %>" alt="" width="200" class="img-fluid" />
    </div>
    <div class="col-8">
      <div class="card-body">
        <a href="/products/<%= id %>">
          <div class="card-title"><%= name %></div>
        </a>
        <p class="card-text"><%= price %></p>
      </div>
    </div>
  </div>
</div>
